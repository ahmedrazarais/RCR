# Exclude specific static and vendor files from language stats
static/js/* linguist-vendored
static/vendor/* linguist-vendored

# Include important HTML files (do not mark all HTML as vendored)
templates/*.html linguist-detectable

# Exclude less significant HTML or Tailwind files
templates/partials/* linguist-vendored

# Include CSS files but exclude large Tailwind-generated files
static/css/main.css linguist-detectable
static/css/tailwind.css linguist-vendored

# Exclude documentation and readme files
*.md linguist-documentation
docs/* linguist-documentation

# Ensure migrations or generated Python files are excluded
migrations/* linguist-generated
